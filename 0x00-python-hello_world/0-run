i#!/bin/bash
# Check if the PYFILE environment variable is set
if [ -z "$PYFILE" ]; then
  echo "Error: PYFILE environment variable is not set"
  exit 1
fi

# Check if the Python script exists
if [ ! -f "$PYFILE" ]; then
  echo "Error: Python script file does not exist"
  exit 1
fi

# Run the Python script
python "$PYFILE"
